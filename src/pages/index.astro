---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.vue";
import Hero from "../components/Hero.vue";
import Services from "../components/Services.vue";
import DhlImg from "../assets/images/DHL-PaketShop-450.jpg";
import AboutTeaser from "../components/AboutTeaser.astro";
import PriceList from "../components/PriceList.vue";
import Testimonials from "../components/Testimonials.vue";
import ContactInfo from "../components/ContactInfo.astro";
import Footer from "../components/Footer.astro";
---

<Layout
	title="Valentina Änderungsschneiderei Düsseldorf-Eller | Präzision seit 40 Jahren"
	description="Ihre professionelle Änderungsschneiderei in Düsseldorf Eller. Wir reparieren, ändern und pflegen Ihre Kleidung. Express-Service, Leder, Brautmoden & mehr."
>
	<Header client:load />
	<main>
		<Hero client:load />
		<Services />

		<!-- DHL Section (Refined Redesign) -->
		<section class="py-24 bg-white">
			<div class="container mx-auto px-4">
				<div
					class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center"
				>
					<!-- Text Content -->
					<div class="order-2 lg:order-1">
						<div
							class="inline-flex items-center gap-2 bg-neutral-100 text-gray-600 px-3 py-1.5 rounded-full text-xs font-bold mb-6 shadow-sm uppercase tracking-wider"
						>
							<span class="w-2 h-2 rounded-full bg-accent-warm"
							></span>
							Offizieller Partner
						</div>
						<h2
							class="text-3xl font-bold text-gray-900 mb-2 leading-tight"
						>
							DHL Service vor Ort
						</h2>
						<p class="text-xl text-gray-500 mb-10 font-medium">
							Kombinieren Sie Ihren Besuch mit Ihren
							Postgeschäften.
						</p>

						<!-- 4 Core Benefits (Grid) -->
						<div class="grid grid-cols-2 gap-x-8 gap-y-10">
							<div class="flex flex-col gap-4">
								<div
									class="w-14 h-14 bg-accent-warm/10 rounded-2xl flex items-center justify-center text-accent-warm group-hover:bg-accent-warm group-hover:text-white transition-colors"
								>
									<svg
										xmlns="http://www.w3.org/2000/svg"
										width="28"
										height="28"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
										><path
											d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"
										></path><polyline
											points="3.27 6.96 12 12.01 20.73 6.96"
										></polyline><line
											x1="12"
											y1="22.08"
											x2="12"
											y2="12"></line></svg
									>
								</div>
								<div>
									<h4
										class="font-bold text-gray-900 text-base mb-1"
									>
										Paketannahme
									</h4>
									<p
										class="text-xs text-gray-500 leading-relaxed"
									>
										Bequeme Abgabe von Retouren & Paketen
									</p>
								</div>
							</div>
							<div class="flex flex-col gap-4">
								<div
									class="w-14 h-14 bg-accent-warm/10 rounded-2xl flex items-center justify-center text-accent-warm"
								>
									<svg
										xmlns="http://www.w3.org/2000/svg"
										width="28"
										height="28"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
										><rect
											x="2"
											y="4"
											width="20"
											height="16"
											rx="2"></rect><path
											d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
										></path></svg
									>
								</div>
								<div>
									<h4
										class="font-bold text-gray-900 text-base mb-1"
									>
										Briefversand
									</h4>
									<p
										class="text-xs text-gray-500 leading-relaxed"
									>
										Verkauf von Briefmarken direkt vor Ort
									</p>
								</div>
							</div>
							<div class="flex flex-col gap-4">
								<div
									class="w-14 h-14 bg-accent-warm/10 rounded-2xl flex items-center justify-center text-accent-warm"
								>
									<svg
										xmlns="http://www.w3.org/2000/svg"
										width="28"
										height="28"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
										><path
											d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2"
										></path><circle cx="7" cy="17" r="2"
										></circle><path d="M9 17h6"
										></path><circle cx="17" cy="17" r="2"
										></circle></svg
									>
								</div>
								<div>
									<h4
										class="font-bold text-gray-900 text-base mb-1"
									>
										Parkplätze
									</h4>
									<p
										class="text-xs text-gray-500 leading-relaxed"
									>
										Entspanntes Parken direkt vor der Tür
									</p>
								</div>
							</div>
							<div class="flex flex-col gap-4">
								<div
									class="w-14 h-14 bg-accent-warm/10 rounded-2xl flex items-center justify-center text-accent-warm"
								>
									<svg
										xmlns="http://www.w3.org/2000/svg"
										width="28"
										height="28"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
										><polygon
											points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"
										></polygon></svg
									>
								</div>
								<div>
									<h4
										class="font-bold text-gray-900 text-base mb-1"
									>
										Express-Service
									</h4>
									<p
										class="text-xs text-gray-500 leading-relaxed"
									>
										Schnelle & unkomplizierte Abwicklung
									</p>
								</div>
							</div>
						</div>
					</div>

					<!-- Image (Rounded 12px, Correct Aspect) -->
					<div
						class="relative order-1 lg:order-2 flex justify-center lg:justify-end"
					>
						<div class="relative w-full max-w-sm">
							<div
								class="absolute inset-0 bg-accent-warm/5 rounded-[12px] rotate-3 transform transition-transform scale-105"
							>
							</div>
							<div
								class="relative aspect-[4/3] rounded-[12px] overflow-hidden shadow-sm border border-gray-100 bg-white"
							>
								<img
									src={DhlImg.src}
									alt="DHL Paketshop"
									class="w-full h-full object-cover opacity-95 hover:scale-105 transition-transform duration-700"
								/>
								<!-- Discreet Logo Overlay -->
								<div
									class="absolute top-4 left-4 bg-white/95 backdrop-blur-sm px-3 py-1.5 rounded-lg shadow-sm border border-gray-100 flex items-center gap-2"
								>
									<span
										class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"
									></span>
									<span
										class="text-[10px] font-bold text-gray-500 tracking-wider"
										>GEÖFFNET</span
									>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<AboutTeaser />
		<PriceList client:visible />
		<Testimonials client:visible />
		<ContactInfo />
	</main>
	<Footer />
</Layout>
