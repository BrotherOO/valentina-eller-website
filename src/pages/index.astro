---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.vue";
import Hero from "../components/Hero.vue";
import Services from "../components/Services.vue";
import DhlImg from "../assets/images/DHL-PaketShop-450.jpg";
import AboutTeaser from "../components/AboutTeaser.astro";
import PriceList from "../components/PriceList.vue";
import Testimonials from "../components/Testimonials.vue";
import ContactInfo from "../components/ContactInfo.astro";
import Footer from "../components/Footer.astro";
---

<Layout
	title="Valentina Änderungsschneiderei Düsseldorf-Eller | Präzision seit 40 Jahren"
	description="Ihre professionelle Änderungsschneiderei in Düsseldorf Eller. Wir reparieren, ändern und pflegen Ihre Kleidung. Express-Service, Leder, Brautmoden & mehr."
>
	<Header client:load />
	<main>
		<Hero client:load />
		<Services />

		<!-- DHL Section (Redesign: Neutral/Trust) -->
		<section class="py-24 bg-neutral-50/50">
			<div class="container mx-auto px-4">
				<div
					class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center"
				>
					<!-- Text Content -->
					<div class="order-2 lg:order-1">
						<div
							class="inline-flex items-center gap-2 bg-white border border-gray-200 text-gray-500 px-3 py-1.5 rounded-full text-xs font-bold mb-6 shadow-sm uppercase tracking-wider"
						>
							<span class="w-2 h-2 rounded-full bg-accent-warm"
							></span>
							Partner vor Ort
						</div>
						<h2
							class="text-3xl font-bold text-gray-900 mb-6 leading-tight"
						>
							DHL Paketshop in Düsseldorf-Eller
						</h2>

						<!-- Clean List of Benefits -->
						<div
							class="bg-white p-8 rounded-3xl shadow-sm border border-gray-100"
						>
							<ul class="space-y-4">
								{
									[
										"Paketabgabe direkt mit Änderungsservice verbinden",
										"Schnelle Abwicklung ohne lange Warteschlangen",
										"Entspannte Parkmöglichkeiten direkt am Haus",
										"Stressfreies Ausladen auch bei größeren Paketen",
										"Persönlicher und freundlicher Service",
										"Kostenlose Annahme von Retouren",
										"Sofortiger Kauf von Paketmarken und Porto",
										"Gute Erreichbarkeit im Stadtteil Eller",
										"Verlässliche Annahmezeiten (auch Samstags)",
										"Alles an einem Ort erledigen",
									].map((item) => (
										<li class="flex items-start gap-3 text-gray-700">
											<span class="text-accent-warm mt-0.5">
												<svg
													class="w-5 h-5"
													fill="none"
													stroke="currentColor"
													viewBox="0 0 24 24"
												>
													<path
														stroke-linecap="round"
														stroke-linejoin="round"
														stroke-width="2"
														d="M5 13l4 4L19 7"
													/>
												</svg>
											</span>
											<span class="text-sm font-medium">
												{item}
											</span>
										</li>
									))
								}
							</ul>
						</div>
					</div>

					<!-- Image (Optimized & Discreet) -->
					<div
						class="relative order-1 lg:order-2 flex justify-center lg:justify-end"
					>
						<div class="relative w-full max-w-md">
							<div
								class="absolute inset-0 bg-accent-warm/5 rounded-[2.5rem] rotate-6 transform scale-95"
							>
							</div>
							<div
								class="relative aspect-[4/3] rounded-3xl overflow-hidden shadow-lg border-4 border-white bg-white"
							>
								<img
									src={DhlImg.src}
									alt="DHL Paketshop Annahme in Düsseldorf Eller"
									class="w-full h-full object-cover opacity-90 hover:opacity-100 transition-opacity"
								/>
								<!-- Discreet Logo Overlay -->
								<div
									class="absolute bottom-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1.5 rounded-lg shadow-sm border border-gray-100"
								>
									<span
										class="text-[10px] font-bold text-gray-400 tracking-widest uppercase"
										>Offizieller Partner</span
									>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<AboutTeaser />
		<PriceList client:visible />
		<Testimonials client:visible />
		<ContactInfo />
	</main>
	<Footer />
</Layout>
