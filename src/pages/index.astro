---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.vue";
import Hero from "../components/Hero.vue";
import Services from "../components/Services.vue";
import AboutTeaser from "../components/AboutTeaser.astro";
import PriceList from "../components/PriceList.vue";
import Testimonials from "../components/Testimonials.vue";
import ContactInfo from "../components/ContactInfo.astro";
import Footer from "../components/Footer.astro";
---

<Layout
	title="Valentina Änderungsschneiderei Düsseldorf-Eller | Präzision seit 40 Jahren"
	description="Ihre professionelle Änderungsschneiderei in Düsseldorf Eller. Wir reparieren, ändern und pflegen Ihre Kleidung. Express-Service, Leder, Brautmoden & mehr."
>
	<Header client:load />
	<main>
		<Hero client:load />
		<Services />

		<!-- DHL Section (Aligned with About Us Design) -->
		<section class="py-16 md:py-24 bg-white relative">
			<div class="container mx-auto px-4 max-w-5xl">
				<div
					class="bg-white rounded-3xl border border-gray-200 shadow-sm p-8 md:p-12 relative overflow-hidden"
				>
					<!-- Top Badge / Logo Area -->
					<div class="flex justify-between items-start mb-8">
						<div>
							<h2
								class="text-2xl md:text-3xl font-bold text-gray-900 mb-2"
							>
								DHL Service in Düsseldorf-Eller: Ihr Partner vor
								Ort
							</h2>
							<p class="text-gray-500">
								Verbinden Sie Ihre Schneider-Termine mit Ihren
								Postgeschäften – effizient und unkompliziert.
							</p>
						</div>
						<!-- Mini DHL Logo Icon -->
						<div
							class="hidden md:flex flex-col items-center justify-center p-3 bg-gray-50 rounded-xl border border-gray-100"
						>
							<span
								class="text-xs font-bold text-gray-400 mb-1 tracking-widest uppercase"
								>Official</span
							>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 24 24"
								class="w-12 h-8 text-red-600"
								fill="currentColor"
							>
								<path d="M0 0h24v24H0z" fill="none"></path>
								<path
									d="M11 15H9v2h2v-2zm2 0h-2v2h2v-2zm7.5-6.5l-2.5 7h-2.1l2.5-7h2.1zm-18 0l-2.5 7h-2.1l2.5-7h2.1zm8.7 0l-2.5 7h-2.1l2.5-7h2.1z"
									stroke="currentColor"
									stroke-width="2"></path>
								<text
									x="50%"
									y="50%"
									dominant-baseline="middle"
									text-anchor="middle"
									font-weight="900"
									font-size="10"
									fill="#d40511">DHL</text
								>
							</svg>
						</div>
					</div>

					<!-- 2x2 Grid Benefits -->
					<div
						class="grid grid-cols-1 md:grid-cols-2 gap-y-10 gap-x-12"
					>
						<!-- Benefit 1 -->
						<div class="flex gap-4">
							<div
								class="mt-1 flex-shrink-0 w-12 h-12 bg-accent-warm/10 rounded-full flex items-center justify-center text-accent-warm"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="w-6 h-6"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
									></path>
								</svg>
							</div>
							<div>
								<h4 class="font-bold text-gray-900 mb-1">
									Paketannahme
								</h4>
								<p class="text-sm text-gray-500 leading-snug">
									Bequeme Abgabe von Retouren & Paketen.
								</p>
							</div>
						</div>

						<!-- Benefit 2 -->
						<div class="flex gap-4">
							<div
								class="mt-1 flex-shrink-0 w-12 h-12 bg-accent-warm/10 rounded-full flex items-center justify-center text-accent-warm"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="w-6 h-6"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
									></path>
								</svg>
							</div>
							<div>
								<h4 class="font-bold text-gray-900 mb-1">
									Briefversand
								</h4>
								<p class="text-sm text-gray-500 leading-snug">
									Verkauf von Briefmarken direkt vor Ort.
								</p>
							</div>
						</div>

						<!-- Benefit 3 -->
						<div class="flex gap-4">
							<div
								class="mt-1 flex-shrink-0 w-12 h-12 bg-accent-warm/10 rounded-full flex items-center justify-center text-accent-warm"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="w-6 h-6"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"
									></path>
								</svg>
							</div>
							<div>
								<h4 class="font-bold text-gray-900 mb-1">
									Parkplätze
								</h4>
								<p class="text-sm text-gray-500 leading-snug">
									Stressfreies Parken direkt vor der Tür.
								</p>
							</div>
						</div>

						<!-- Benefit 4 -->
						<div class="flex gap-4">
							<div
								class="mt-1 flex-shrink-0 w-12 h-12 bg-accent-warm/10 rounded-full flex items-center justify-center text-accent-warm"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="w-6 h-6"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
									></path>
								</svg>
							</div>
							<div>
								<h4 class="font-bold text-gray-900 mb-1">
									Zeitersparnis
								</h4>
								<p class="text-sm text-gray-500 leading-snug">
									Kombinieren Sie Post & Schneiderei.
								</p>
							</div>
						</div>
					</div>

					<!-- CTA -->
					<div
						class="mt-10 pt-8 border-t border-gray-100 flex justify-center md:justify-start"
					>
						<a
							href="#footer-map"
							class="text-sm font-semibold text-accent-warm hover:text-accent-warm/80 transition-colors flex items-center gap-2"
						>
							Jetzt Standort auf Karte ansehen
							<svg
								xmlns="http://www.w3.org/2000/svg"
								class="w-4 h-4"
								fill="none"
								viewBox="0 0 24 24"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M19 9l-7 7-7-7"></path>
							</svg>
						</a>
					</div>

					<!-- Decorative Background Blob -->
					<div
						class="absolute -right-20 -top-20 w-64 h-64 bg-accent-warm/5 rounded-full blur-3xl pointer-events-none"
					>
					</div>
				</div>
			</div>
		</section>
		<AboutTeaser />
		<PriceList client:visible />
		<Testimonials client:visible />
		<ContactInfo />
	</main>
	<Footer />
</Layout>
