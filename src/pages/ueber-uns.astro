---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.vue";
import Footer from "../components/Footer.astro";
import ownerImg from "../assets/DIE-SCHNEIDERIN---INHABERIN.jpg";
import ext1 from "../assets/ausenansicht.jpg";
import ext2 from "../assets/ausenansicht2.jpg";
import int1 from "../assets/innenansicht1.jpg";
import int2 from "../assets/innenansicht2.jpg";
import dhlImg from "../assets/images/0008769_dhl-express-shipping.jpeg";

// No external assets needed for icons, using inline SVGs for stability
---

<Layout
    title="Valentina Dubinskaya – Ihre persönliche Schneiderin in Düsseldorf-Eller"
    description="Handwerk aus Leidenschaft seit 2010 in Eller. Ihre Expertin für Änderungsschneiderei, Lederreparatur, Brautmode & DHL Paketshop. Jetzt Leistungen entdecken!"
>
    <Header client:load />

    <main class="pt-0 bg-neutral-50/30">
        <!-- 1. Hero Section: Persönliche Begrüßung & Zeitstrahl -->
        <section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
            <!-- Background Gradient -->
            <div
                class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-[#FFF5F6] via-white to-white"
            >
            </div>

            <!-- Decorative Background Icon (Sewing Machine) -->
            <div
                class="absolute inset-0 flex items-center justify-center opacity-[0.03] pointer-events-none"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    class="w-[800px] h-[800px] text-gray-900"
                    fill="currentColor"
                >
                    <path d="M21 9V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v10h11"
                    ></path><circle cx="16" cy="15" r="3"></circle><line
                        x1="2"
                        y1="16"
                        x2="22"
                        y2="16"></line><line x1="10" y1="4" x2="13" y2="9"
                    ></line><line x1="9" y1="16" x2="9" y2="12"></line>
                </svg>
            </div>

            <div class="container mx-auto px-4 relative z-10">
                <div class="max-w-4xl mx-auto text-center">
                    <span
                        class="inline-block py-1 px-4 rounded-full bg-white border border-[#FF91A4]/30 text-[#FF91A4] text-xs font-bold uppercase tracking-wider mb-6 shadow-sm"
                    >
                        Seit 2010 Ihr Atelier im Dillenburger Weg
                    </span>
                    <h1
                        class="text-3xl md:text-5xl lg:text-5xl font-bold text-gray-800 mb-6 leading-tight max-w-4xl mx-auto"
                    >
                        Ihre Schneiderin Valentina Dubinskaya – Handwerk &
                        Tradition seit 2010
                    </h1>
                    <p
                        class="text-xl text-gray-600 mb-10 leading-relaxed max-w-3xl mx-auto font-medium"
                    >
                        Handwerk aus Leidenschaft. Seit 1984 im Beruf und seit
                        2010 mit eigenem Atelier für Sie vor Ort.
                    </p>
                    <a
                        href="https://www.schneiderei-eller.de/#dienstleistungen"
                        class="inline-flex items-center gap-2 bg-[#FF91A4] text-white px-8 py-4 rounded-full font-bold shadow-lg hover:shadow-[#FF91A4]/40 hover:scale-105 transition-all"
                    >
                        Meine Leistungen entdecken
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path d="M7 17l9.2-9.2M17 17V7H7"></path></svg
                        >
                    </a>
                </div>
            </div>
        </section>

        <!-- 2. Sektion: Unsere Philosophie (Herzlich & Familiär) -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-4">
                <div
                    class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center"
                >
                    <!-- Text -->
                    <div class="order-2 lg:order-1">
                        <div
                            class="inline-flex items-center gap-2 text-[#FF91A4] mb-4"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path
                                    d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"
                                ></path></svg
                            >
                            <span
                                class="font-bold uppercase tracking-wider text-sm"
                                >Herzlich & Familiär</span
                            >
                        </div>
                        <h2 class="text-3xl font-bold text-gray-900 mb-6">
                            Handwerk aus Leidenschaft
                        </h2>
                        <div class="prose prose-lg text-gray-600 mb-8">
                            <p
                                class="mb-6 font-medium text-lg italic text-gray-800"
                            >
                                „Kleidung ist ein Ausdruck von Persönlichkeit.
                                Seit über 40 Jahren widme ich mich der Kunst des
                                Nähens. Was als private Passion begann, ist
                                heute mein täglicher Antrieb: Ihre
                                Lieblingsstücke zu erhalten und perfekt
                                anzupassen.“
                            </p>
                            <p>
                                In meinem Atelier im Dillenburger Weg verbinde
                                ich traditionelle Techniken mit modernster
                                Präzision. Ob Sie eine <strong
                                    >Schneiderin in meiner Nähe</strong
                                > suchen oder Kleidung ändern lassen möchten – ich
                                bin für Sie da.
                            </p>
                        </div>

                        <!-- Icons Grid -->
                        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                            <div
                                class="flex flex-col gap-3 p-4 rounded-2xl bg-[#FFF0F3]/50 border border-[#FFF0F3]"
                            >
                                <div class="text-[#FF91A4]">
                                    <!-- mdi:heart-half-full -->
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="32"
                                        height="32"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        ><path
                                            d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"
                                        ></path><path
                                            d="M12 5 9.04 7.96a2.17 2.17 0 0 0 0 3.08c.86.86 2.26.86 3.12 0L12 11.2V5Z"
                                        ></path></svg
                                    >
                                </div>
                                <span class="font-bold text-gray-900 text-sm"
                                    >Familiäre Atmosphäre</span
                                >
                            </div>
                            <div
                                class="flex flex-col gap-3 p-4 rounded-2xl bg-[#FFF0F3]/50 border border-[#FFF0F3]"
                            >
                                <div class="text-[#FF91A4]">
                                    <!-- mdi:sewing-machine -->
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="32"
                                        height="32"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        ><path
                                            d="M21 9V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v10h11"
                                        ></path><circle cx="16" cy="15" r="3"
                                        ></circle><line
                                            x1="2"
                                            y1="16"
                                            x2="22"
                                            y2="16"></line><line
                                            x1="10"
                                            y1="4"
                                            x2="13"
                                            y2="9"></line><line
                                            x1="9"
                                            y1="16"
                                            x2="9"
                                            y2="12"></line></svg
                                    >
                                </div>
                                <span class="font-bold text-gray-900 text-sm"
                                    >5 Spezial-Maschinen</span
                                >
                            </div>
                            <div
                                class="flex flex-col gap-3 p-4 rounded-2xl bg-[#FFF0F3]/50 border border-[#FFF0F3]"
                            >
                                <div class="text-[#FF91A4]">
                                    <!-- mdi:Leaf -->
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="32"
                                        height="32"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        ><path
                                            d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 13-1.8 17.29A3.6 3.6 0 0 1 11.28 20Z"
                                        ></path><line
                                            x1="16"
                                            y1="8"
                                            x2="10"
                                            y2="14"></line></svg
                                    >
                                </div>
                                <span class="font-bold text-gray-900 text-sm"
                                    >Nachhaltigkeit</span
                                >
                            </div>
                        </div>
                    </div>

                    <!-- Image -->
                    <div class="order-1 lg:order-2">
                        <div
                            class="relative rounded-[2rem] overflow-hidden shadow-2xl rotate-1 group"
                        >
                            <div
                                class="absolute inset-0 bg-[#FF91A4]/10 mix-blend-overlay"
                            >
                            </div>
                            <img
                                src={ownerImg.src}
                                alt="Valentina Dubinskaya - Inhaberin der Änderungsschneiderei in Düsseldorf Eller"
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 3. SEO Content Block (Dienstleistungen & Expertise) -->
        <section class="py-24 bg-[#FFF0F3]/30">
            <div class="container mx-auto px-4 max-w-6xl">
                <div class="text-center mb-16">
                    <h2 class="text-3xl font-bold text-gray-900 mb-4">
                        Meine Leidenschaft für Ihr Lieblingsstück
                    </h2>
                    <p class="text-gray-500 max-w-3xl mx-auto text-lg">
                        Als Ihre persönliche Schneiderin in Düsseldorf Eller
                        sorge ich dafür, dass Ihre Kleidung perfekt sitzt. Seit
                        2010 führe ich meine Schneiderei mit Leidenschaft und
                        rette täglich Textilien vor dem Wegwerfen.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12"
                >
                    <!-- Block 1: Technische Expertise -->
                    <div
                        class="bg-white p-8 rounded-3xl shadow-sm border border-white hover:border-[#FF91A4]/30 transition-colors"
                    >
                        <div class="flex items-start gap-4 mb-4">
                            <div
                                class="p-3 bg-[#FFF0F3] rounded-xl text-[#FF91A4]"
                            >
                                <!-- mdi:sewing-machine -->
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="28"
                                    height="28"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path
                                        d="M21 9V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v10h11"
                                    ></path><circle cx="16" cy="15" r="3"
                                    ></circle><line
                                        x1="2"
                                        y1="16"
                                        x2="22"
                                        y2="16"></line><line
                                        x1="10"
                                        y1="4"
                                        x2="13"
                                        y2="9"></line></svg
                                >
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 mt-2">
                                Technische Expertise
                            </h3>
                        </div>
                        <p class="text-gray-600 leading-relaxed mb-4">
                            Für eine fachgerechte <strong>Lederreparatur</strong
                            > oder das <strong>Hose kürzen bei Jeans</strong> verfüge
                            ich über fünf spezialisierte Nähmaschinen für perfekte
                            Ergebnisse.
                        </p>
                        <a
                            href="/#preise"
                            class="text-sm font-bold text-[#FF91A4] hover:underline"
                            >Hose kürzen ab 8 € &rarr;</a
                        >
                    </div>

                    <!-- Block 2: Spezialanfertigungen & Brautmode -->
                    <div
                        class="bg-white p-8 rounded-3xl shadow-sm border border-white hover:border-[#FF91A4]/30 transition-colors"
                    >
                        <div class="flex items-start gap-4 mb-4">
                            <div
                                class="p-3 bg-[#FFF0F3] rounded-xl text-[#FF91A4]"
                            >
                                <!-- mdi:ring (Bridal) -->
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="28"
                                    height="28"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path
                                        d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                                    ></path></svg
                                >
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 mt-2">
                                Maßarbeit & Braut
                            </h3>
                        </div>
                        <p class="text-gray-600 leading-relaxed mb-4">
                            Ihr großer Tag soll perfekt sein? Ich passe <strong
                                >Maßgeschneiderte Brautkleider</strong
                            > in Düsseldorf an. Auch individuelle <strong
                                >Kissenbezüge</strong
                            > oder <strong>Gardinen nähen lassen</strong> in Eller
                            ist möglich.
                        </p>
                        <a
                            href="/#kontakt"
                            class="text-sm font-bold text-[#FF91A4] hover:underline"
                            >Brautmode anfragen &rarr;</a
                        >
                    </div>

                    <!-- Block 3: Express-Service -->
                    <div
                        class="bg-white p-8 rounded-3xl shadow-sm border border-white hover:border-[#FF91A4]/30 transition-colors"
                    >
                        <div class="flex items-start gap-4 mb-4">
                            <div
                                class="p-3 bg-[#FFF0F3] rounded-xl text-[#FF91A4]"
                            >
                                <!-- mdi:flash-outline -->
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="28"
                                    height="28"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"
                                    ></path></svg
                                >
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 mt-2">
                                Express-Service
                            </h3>
                        </div>
                        <p class="text-gray-600 leading-relaxed mb-4">
                            Manchmal muss es schnell gehen. Nutzen Sie meinen <strong
                                >Express-Service für Änderungen</strong
                            > (Same-Day nach Absprache) für eilige Notfälle.
                        </p>
                        <a
                            href="/#kontakt"
                            class="text-sm font-bold text-[#FF91A4] hover:underline"
                            >Express anfragen &rarr;</a
                        >
                    </div>
                </div>
                <div class="text-center mt-6">
                    <a
                        href="/#preise"
                        class="inline-block border-2 border-[#FF91A4] text-[#FF91A4] hover:bg-[#FF91A4] hover:text-white px-8 py-3 rounded-full font-bold transition-all"
                        >Zur Preisliste</a
                    >
                </div>
            </div>

            <!-- 4. Expanded DHL Service (Groß & Informativ) -->
            <section class="py-24 bg-white relative overflow-hidden">
                <div class="container mx-auto px-4 max-w-6xl">
                    <div
                        class="bg-[#FFF0F3]/30 rounded-[2.5rem] border border-[#FF91A4]/20 p-8 md:p-16 relative"
                    >
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                            <!-- Links: Text -->
                            <div>
                                <div
                                    class="inline-flex items-center gap-2 mb-6 bg-white px-4 py-2 rounded-full shadow-sm border border-[#FF91A4]/20"
                                >
                                    <span
                                        class="w-2 h-2 rounded-full bg-[#FF91A4]"
                                    ></span>
                                    <span
                                        class="text-xs font-bold text-gray-600 uppercase tracking-widest"
                                        >Offizieller Partner</span
                                    >
                                </div>
                                <h2
                                    class="text-3xl md:text-4xl font-bold text-gray-900 mb-6"
                                >
                                    Ihr zuverlässiger DHL Paketshop in
                                    Düsseldorf-Eller
                                </h2>
                                <p
                                    class="text-lg text-gray-600 mb-8 leading-relaxed"
                                >
                                    Suchen Sie einen <strong
                                        >Paketshop in der Nähe</strong
                                    >, um schnell eine Retoure abzugeben oder <strong
                                        >Briefmarken zu kaufen</strong
                                    >? Kombinieren Sie Ihren Weg zu mir! Während
                                    ich Ihren Reißverschluss repariere, können
                                    Sie bequem Ihr DHL Paket abgeben. Sparen Sie
                                    sich zusätzliche Wege und Wartezeit.
                                </p>

                                <ul class="space-y-6">
                                    <li class="flex items-center gap-4">
                                        <div
                                            class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-[#FF91A4] shadow-sm"
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                ><path d="M16.5 9.4 7.55 4.24"
                                                ></path><path
                                                    d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"
                                                ></path><polyline
                                                    points="3.29 7 12 12.01 20.7 7"
                                                ></polyline><line
                                                    x1="12"
                                                    y1="22"
                                                    x2="12"
                                                    y2="12"></line></svg
                                            >
                                        </div>
                                        <div>
                                            <strong class="block text-gray-900"
                                                >Paketannahme & Retouren</strong
                                            >
                                            <span class="text-sm text-gray-500"
                                                >Unkomplizierte Abwicklung</span
                                            >
                                        </div>
                                    </li>
                                    <li class="flex items-center gap-4">
                                        <div
                                            class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-[#FF91A4] shadow-sm"
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                ><path
                                                    d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                                                ></path><polyline
                                                    points="22,6 12,13 2,6"
                                                ></polyline></svg
                                            >
                                        </div>
                                        <div>
                                            <strong class="block text-gray-900"
                                                >Briefversand & Marken</strong
                                            >
                                            <span class="text-sm text-gray-500"
                                                >Direkt vor Ort kaufen</span
                                            >
                                        </div>
                                    </li>
                                    <li class="flex items-center gap-4">
                                        <div
                                            class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-[#FF91A4] shadow-sm"
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                ><path
                                                    d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2"
                                                ></path><circle
                                                    cx="7"
                                                    cy="17"
                                                    r="2"></circle><path
                                                    d="M9 17h6"></path><circle
                                                    cx="17"
                                                    cy="17"
                                                    r="2"></circle></svg
                                            >
                                        </div>
                                        <div>
                                            <strong class="block text-gray-900"
                                                >Stressfreies Parken</strong
                                            >
                                            <span class="text-sm text-gray-500"
                                                >Direkt vor der Tür halten</span
                                            >
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <!-- Rechts: Visual / Logo Icon -->
                            <div
                                class="relative flex items-center justify-center lg:justify-end"
                            >
                                <div
                                    class="bg-white p-8 rounded-[2rem] shadow-xl border border-gray-100 w-full max-w-sm flex flex-col items-center text-center"
                                >
                                    <span
                                        class="text-xs font-bold text-gray-400 mb-4 tracking-widest uppercase block"
                                        >Offizieller Partner</span
                                    >
                                    <img
                                        src={dhlImg.src}
                                        alt="DHL Paketshop Logo Düsseldorf Eller"
                                        class="object-contain max-h-20 max-w-full mb-6"
                                        width="200"
                                        height="80"
                                    />
                                    <!-- Retry with a simpler reliable SVG -->
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 100 30"
                                        class="w-40 h-auto mb-6"
                                    >
                                        <title>DHL</title>
                                        <g
                                            fill="#d40511"
                                            font-family="Arial, Helvetica, sans-serif"
                                            font-weight="900"
                                            font-style="italic"
                                        >
                                            <text
                                                x="0"
                                                y="24"
                                                font-size="28"
                                                letter-spacing="-2">DHL</text
                                            >
                                            <line
                                                x1="0"
                                                y1="28"
                                                x2="100"
                                                y2="28"
                                                stroke="#d40511"
                                                stroke-width="2"
                                                opacity="0.1"></line>
                                        </g>
                                    </svg>
                                    <div class="h-px w-full bg-gray-100 my-4">
                                    </div>
                                    <p
                                        class="text-sm text-gray-500 font-medium"
                                    >
                                        Annahme, Versand & Verkauf
                                    </p>
                                    <p class="text-xs text-gray-400 mt-2">
                                        Dillenburger Weg 33a, Düsseldorf im
                                        Stadtbezirk Eller
                                    </p>
                                </div>

