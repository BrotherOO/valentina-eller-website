---
import "../styles/global.css";
import favicon from "../assets/valentina_favicon.png";
import CookieBanner from "../components/CookieBanner.vue";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Valentina Änderungsschneiderei | Düsseldorf Eller",
	description = "Reparaturen und Anpassungen für Kleidung aller Art in Düsseldorf-Eller.",
} = Astro.props;
---

<!doctype html>
<html lang="de" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={favicon.src} />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />

		<!-- Google Fonts: Playfair Display & Inter -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>

		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "LocalBusiness",
				"name": "Valentina Dubinskys Änderungsschneiderei",
				"image": "/logo.png",
				"telephone": "0211 217213",
				"address": {
					"@type": "PostalAddress",
					"streetAddress": "Dillenburger Weg 33a",
					"addressLocality": "Düsseldorf",
					"postalCode": "40229",
					"addressCountry": "DE"
				},
				"openingHoursSpecification": [
					{
						"@type": "OpeningHoursSpecification",
						"dayOfWeek": [
							"Monday",
							"Tuesday",
							"Thursday",
							"Friday"
						],
						"opens": "10:00",
						"closes": "13:00"
					},
					{
						"@type": "OpeningHoursSpecification",
						"dayOfWeek": [
							"Monday",
							"Tuesday",
							"Thursday",
							"Friday"
						],
						"opens": "15:00",
						"closes": "18:00"
					},
					{
						"@type": "OpeningHoursSpecification",
						"dayOfWeek": ["Wednesday", "Saturday"],
						"opens": "10:00",
						"closes": "13:00"
					}
				],
				"priceRange": "€"
			}
		</script>
	</head>
	<body
		class="bg-primary text-gray-800 font-sans antialiased overflow-x-hidden selection:bg-highlight selection:text-gray-900"
	>
		<slot />
		<CookieBanner client:load />
	</body>
</html>

<script>
	// Global script if needed
</script>
