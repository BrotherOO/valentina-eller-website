---
import OpeningHours from "./OpeningHours.vue";
---

<section id="kontakt" class="py-24 bg-texture-linen relative scroll-mt-20">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-stretch">
            <!-- Opening Hours Box - Dynamic -->
            <div class="h-full">
                <OpeningHours client:visible />
            </div>

            <!-- Map / Contact Form Placeholder -->
            <div
                class="bg-white rounded-3xl overflow-hidden shadow-lg h-full min-h-[400px] relative group"
            >
                <!-- Static Map or Embed Placeholder (using iframe) -->
                <iframe
                    width="100%"
                    height="100%"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3225.9938868744757!2d6.8247351770574!3d51.19947323315116!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47b8cb99cead1003%3A0xcdc5770cd9c9ea36!2sWalia's%20%C3%84nderungsschneiderei!5e1!3m2!1sde!2sde!4v1768671007368!5m2!1sde!2sde"
                    style="border:0; filter: grayscale(20%) kontrast(1.2);"
                    allowfullscreen=""
                    loading="lazy"
                    title="Standort der Änderungsschneiderei Valentina Dubinsky in Düsseldorf-Eller auf Google Maps"
                    referrerpolicy="no-referrer-when-downgrade"
                    class="w-full h-full group-hover:filter-none transition-all duration-700"
                ></iframe>

                <div
                    class="absolute bottom-6 left-6 bg-white/90 backdrop-blur px-6 py-4 rounded-xl shadow-lg"
                >
                    <p class="font-bold text-gray-900">
                        Valentina Änderungsschneiderei
                    </p>
                    <p class="text-sm text-gray-600">
                        Dillenburger Weg 33a, Düsseldorf
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
